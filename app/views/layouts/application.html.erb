<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <% if user_signed_in? %>
      <ul>
        <li><%= link_to "Home", foods_path %></li>
        <li><%= link_to "Food List", foods_path %></li>
        <li><%= link_to "Recipe List", recipes_path %></li>
        <li><%= link_to "Public Recip List", public_recipes_path %></li>
        <li><%= button_to(
        "Log Out",
        destroy_user_session_path,
        method: :delete, class: 'but_log'
      ) %></li>

      </ul>
    <% else %>
      <ul>
        <li><%= link_to "Home", foods_path %></li>
        <li><%= link_to "Login", new_user_session_path %></li>
        <li><%= link_to "Register", new_user_registration_path %></li>
      </ul>
    <% end %>

    <div class="flash-notice">
      <%= notice %>
    </div>
    <div class="flash-alert">
      <%= alert %>
    </div>
    <%= yield %>
  </body>
</html>
